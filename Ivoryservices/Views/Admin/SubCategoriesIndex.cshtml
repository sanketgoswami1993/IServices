@model IEnumerable<Ivoryservices.Models.SubCategory>

@{
    TempData["Admin"] = "ADMIN";
      Layout = "~/Views/Shared/_Layout.cshtml";   
}
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">*@
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div>
    <h4 align="center">SubCategory</h4>

    <a asp-action="SubCategories" class="fin">Create New</a>

    
    <div class="row">
     <div class="col-md-2"></div>
     <div class="col-md-8 card">
        <div class="card-body">
            
<table class="table fin">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Cat_Id)
            </th>*@
            <th>
                SUBCATEGORY NAME
                @*@Html.DisplayNameFor(model => model.Sub_Name)*@
            </th>
            <th></th>
            <th>
                SUBCATEGORY PRICE
                @*@Html.DisplayNameFor(model => model.Sub_Price)*@
            </th>
            <th></th>
            <th>
                SUBCATEGORY IMAGE
                @*@Html.DisplayNameFor(model => model.Sub_Image)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Cat_Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Sub_Name)
            </td>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.Sub_Price)
            </td>
            <td></td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Sub_Image)*@
                <img src="~/images/@Html.DisplayFor(modelItem => item.Sub_Image)" width="100px" height="100px" />   <br />
            </td>
            <td></td>
            
            <td>
                <a asp-action="SubCategoriesEdit" asp-route-id="@item.Sub_Id">Edit</a> |
                <a asp-action="SubCategoriesDetails" asp-route-id="@item.Sub_Id">Details</a> |
                <a asp-action="SubCategoriesDelete" asp-route-id="@item.Sub_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
  </div>
    </div>
    </div>
</div>
</body>
</html>

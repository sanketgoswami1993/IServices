@model IEnumerable<Ivoryservices.Models.BookingMaster>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Invoice";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div>
        <h1 align="center " class="fin">Invoice</h1>
        <div class="row">
            <div class="col-md-3">
                <table>
                    <tr>
                        <td></td>
                        <td>ONE-STOP SOlUTIONS PVT. LTD.</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6 card">
                <div class="card-body">
                    <table class="table fin">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.Sub_Name)*@Name
                                </th>
                                <th>
                                    @* @Html.DisplayNameFor(model => model.Sub_Price)*@Price
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.tax)*@Tax
                                </th>
                                <th>
                                    @* @Html.DisplayNameFor(model => model.total)*@Total
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                                @*<th>
                                @Html.DisplayNameFor(model => model.grossTotal)
                                </th>*@
                                <th>
                                    @*@Html.DisplayNameFor(model => model.Order_date)*@Date
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                        @*<h6>@ViewBag.user_name</h6>*@
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sub_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sub_Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tax)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.total)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    @*<td>
                                @Html.DisplayFor(modelItem => item.grossTotal)
                                </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Order_date)
                                    </td>
                                    @*<td>
                                <a asp-action="Edit" asp-route-id="@item.BId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.BId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.BId">Delete</a>
                                </td>*@
                                </tr>

                            }
                            <tr>
                                <td colspan="4" style="text-align:start">
                                    Grandtotal
                                </td>
                                <td style="color:red;font-weight:bold;">@ViewBag.TotalAmount.ToString("#,##0.00")</td>
                            </tr>

                        </tbody>

                        @*<a class="btn btn-primary" asp-controller="Report" asp-route-carts="" asp-action="CreatePdf">Print</a>&nbsp; &nbsp;*@

                        <a class="btn btn-primary" asp-controller="Payment" asp-route-carts="" asp-action="PIndex">Payment</a>
                    </table>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
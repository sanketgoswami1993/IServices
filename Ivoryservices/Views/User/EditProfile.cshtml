                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>                              
                                <div class="col-sm-3">
                                    <label asp-for="Confirmpassword" class="control-label lbl"></label>
                                  <input asp-for="Confirmpassword" class="form-control" type="password" style="font-size:1.5rem" />
                                    <span asp-validation-for="Confirmpassword" class="text-danger"></span>
                                </div>
                     </div>
                    <div class="row">
                                 <div class="col-sm-3">
                                    <label asp-for="Email" class="control-label lbl"></label>
                                  <input asp-for="Email" class="form-control" style="font-size:1.5rem" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-sm-3">
                                   <label asp-for="ProfileImg" class="control-label lbl">Category Image</label>
                                    <input class="form-control fin" type="file" data-val="true" 
                                       id="ProfileImg" name="ProfileImg" onchange="onFileSelected(event)" />
                                        <img src="~/images/@Html.DisplayFor(model => model.ProfileImg)" id="Prof_img" alt="Sample Image" width="100px" />
                                        <span asp-validation-for="ProfileImg" class="text-danger"></span>
                                </div>
                    </div>
                                <div class="col-sm-3">
                                    <input type="submit" value="Save" class="btn btn-primary fin" />
                                </div>
                               
                           @* <a asp-action="EditProfileIndex">Back to List</a>*@

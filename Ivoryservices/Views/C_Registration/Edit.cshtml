<form asp-action="Edit" class="fin">
 <div class="container">
    <div class="row" style="font-size:1.5rem">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Regis_Id" />
        <div class="col-sm-6">
            <label asp-for="Regis_Name" class="control-label lbl">Name</label>
            <input asp-for="Regis_Name" class="form-control" style="font-size:1.5rem" />
                <span asp-validation-for="Regis_Name" class="text-danger"></span>
        </div>
          <div class="col-sm-6">
              <label asp-for="Address" class="control-label lbl"></label>
              <input asp-for="Address" class="form-control" style="font-size:1.5rem" />
                <span asp-validation-for="Address" class="text-danger"></span>
        </div>
       
        <div class="col-sm-6">
              <label asp-for="City" class="control-label lbl"></label>
              <input asp-for="City" class="form-control" style="font-size:1.5rem"/>
              <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
                <label asp-for="State" class="control-label lbl"></label>
                <input asp-for="State" class="form-control" style="font-size:1.5rem" />
                <span asp-validation-for="State" class="text-danger"></span>
         </div>
         <div class="col-sm-6">
                <label asp-for="Roles" class="control-label lbl"></label>
                <input asp-for="Roles" class="form-control" style="font-size:1.5rem" />
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Mobile_no" class="control-label lbl"></label>
                <input asp-for="Mobile_no" class="form-control" style="font-size:1.5rem" />
                <span asp-validation-for="Mobile_no" class="text-danger"></span>
            </div>
           @* <div class="col-sm-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>*@
           
           <div class="col-sm-6">
                <label asp-for="Password" class="control-label lbl"></label>
               <input asp-for="Password" class="form-control" type="password" style="font-size:1.5rem" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Confirmpassword" class="control-label lbl"></label>
              <input asp-for="Confirmpassword" class="form-control" type="password" style="font-size:1.5rem" />
                <span asp-validation-for="Confirmpassword" class="text-danger"></span>
            </div>
             <div class="col-sm-6">
                <label asp-for="Email" class="control-label lbl"></label>
              <input asp-for="Email" class="form-control" style="font-size:1.5rem" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                @*<label asp-for="Status" class="control-label"></label>
                <input asp-for="Status"   style="visibility:hidden"/>
               @* @Html.CheckBox("Status", new { @class = "form-control" })*@
                @*@Html.CheckBox("Status", true,new { @class="checkbox" })*@
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImg" class="control-label lbl"></label>
               <input asp-for="ProfileImg" type="file" class="form-control" style="font-size:1.5rem" />
                <span asp-validation-for="ProfileImg" class="text-danger"></span>
            </div>

            <div class="col-sm">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

           
        <a asp-action="Index">Back to List</a>
        </form>
        </div>
    </div>
 </div>
</div>
</body>
</html>









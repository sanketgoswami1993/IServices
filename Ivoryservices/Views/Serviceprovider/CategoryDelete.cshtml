@model Ivoryservices.Models.Category

@{
    TempData["ServiceProvider"] = "SERVICEPROVIDER";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete";
}

<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div>
        <h1 align="center">Delete</h1>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 card">
                <div class="card-body">

                    <div>
                        <h2>Are you sure you want to delete this?</h2>
                        <div>

                            <hr />
                            <dl class="row">
                                <dt class="col-sm-4 lbl">
                                    Category Name
                                </dt>
                                <dd class="col-sm-8 fin">
                                    @Html.DisplayFor(model => model.Cat_Name)
                                </dd>
                                <dt class="col-sm-4 lbl">
                                    Category Image
                                </dt>
                                <dd class="col-sm-8 ">
                                    <img src="~/images/@Html.DisplayFor(model => model.Cat_Image)" alt="Sample Image" width="150px" />   <br />

                                </dd>
                                @* <dt class = "col-sm-4 lbl">
                                Category Price
                                </dt>
                                <dd class = "col-sm-8 fin">
                                @Html.DisplayFor(model => model.Cat_price)
                                </dd>*@
                            </dl>

                            <form class="fin" asp-action="CategoryDelete">
                                <input type="hidden" asp-for="Cat_Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" style="font-size:1.5rem" /> |
                                <a asp-action="CategoryIndex">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
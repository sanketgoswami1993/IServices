@model Ivoryservices.Models.SubCategory

@{
    TempData["ServiceProvider"] = "SERVICEPROVIDER";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">
    function onFileSelected(event) {
        
  var selectedFile = event.target.files[0];
  var reader = new FileReader();

        var imgtag = document.getElementById("Sub_img");
  imgtag.title = selectedFile.name;

  reader.onload = function(event) {
    imgtag.src = event.target.result;
  };

  reader.readAsDataURL(selectedFile);
}
</script>

<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div>
        <h3 align="center">SubCategory Edit</h3>

        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 card">
                <div class="card-body fin">

                    <form asp-action="SubCategoriesEdit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       
                        <div class="form-group">
                            @*<label asp-for="Sub_Id" class="control-label lbl"></label>*@
                            <input type="hidden" asp-for="Sub_Id" />
                            <span asp-validation-for="Sub_Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*<label asp-for="Cat_Id" class="control-label lbl"></label>*@
                            <input type="hidden" asp-for="Cat_Id" />
                            <span asp-validation-for="Cat_Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sub_Name" class="control-label lbl">SubCategory Name</label>
                            <input asp-for="Sub_Name" class="form-control" style="font-size:1.5rem" />
                            <span asp-validation-for="Sub_Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sub_Price" class="control-label lbl">SubCategory Price</label>
                            <input asp-for="Sub_Price" class="form-control" style="font-size:1.5rem" />
                            <span asp-validation-for="Sub_Price" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <label asp-for="Sub_Image" class="control-label lbl" >SubCategory Image</label>
                        <input class="form-control fin" type="file" data-val="true" data-val-required="the SubImage field is required."
                            id="Sub_Image" name="Sub_Image" onchange="onFileSelected(event)" />
                        <img src="~/images/@Html.DisplayFor(model => model.Sub_Image)" id="Sub_img" alt="Sample Image" width="150px" />
                         <span asp-validation-for="Sub_Image" class="text-danger"></span>
                        
                    </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" style="font-size:1.5rem" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="SubCategoriesIndex" class="fin">Back to List</a>
            </div>
        </div>
    </div>


</body>
</html>

